<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.studentmanagement">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.splash.SplashScreen"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- <activity android:name=".ui.addstudent.AddStudent"></activity> -->
        <activity
            android:name=".ui.addstudent.AddStudent"
            android:theme="@style/AppTheme"
            android:label="@string/addnewdata"/>
        <activity
            android:name=".ui.home.HomeScreen"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.studentdetails.StudentDetailScreen"
            android:label="@string/studentdetail"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>